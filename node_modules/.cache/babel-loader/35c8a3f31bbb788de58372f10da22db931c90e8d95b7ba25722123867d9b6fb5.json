{"ast":null,"code":"import axios from 'axios'; // Asegúrate de que Axios esté instalado\nimport AddTask from './components/AddTask.vue';\nimport TaskList from './components/TaskList.vue';\nimport CombinedView from './components/CombinedView.vue';\nexport default {\n  components: {\n    AddTask,\n    TaskList,\n    CombinedView\n  },\n  data() {\n    return {\n      tasks: []\n    };\n  },\n  methods: {\n    async fetchTasks() {\n      try {\n        const response = await axios.get('https://dummyjson.com/todos'); // API de ejemplo\n        this.tasks = response.data.todos;\n      } catch (error) {\n        console.error(\"Error al obtener tareas:\", error);\n      }\n    },\n    async updateTask(taskId) {\n      const task = this.tasks.find(t => t.id === taskId);\n      if (task) {\n        task.completed = !task.completed; // Cambia el estado de completado\n        try {\n          await axios.put(`https://dummyjson.com/todos/${taskId}`, task); // Actualiza en la API\n        } catch (error) {\n          console.error(\"Error al actualizar tarea:\", error);\n        }\n      }\n    },\n    async deleteTask(taskId) {\n      this.tasks = this.tasks.filter(t => t.id !== taskId);\n      try {\n        await axios.delete(`https://dummyjson.com/todos/${taskId}`); // Elimina en la API\n      } catch (error) {\n        console.error(\"Error al eliminar tarea:\", error);\n      }\n    }\n  },\n  mounted() {\n    this.fetchTasks(); // Obtiene las tareas al cargar la aplicación\n  }\n};","map":{"version":3,"names":["axios","AddTask","TaskList","CombinedView","components","data","tasks","methods","fetchTasks","response","get","todos","error","console","updateTask","taskId","task","find","t","id","completed","put","deleteTask","filter","delete","mounted"],"sources":["src/App.vue"],"sourcesContent":["<template>\r\n  <div id=\"app\">\r\n    <header>\r\n      <h1>Gestor de Tareas</h1>\r\n      <p>Bienvenido a la Aplicación de Tareas con Vue</p>\r\n      <p>Esta aplicación te permite gestionar tus tareas de manera eficiente. Puedes añadir nuevas tareas manualmente o extraerlas desde una API.</p>\r\n    </header>\r\n    <section>\r\n      <AddTask @task-added=\"fetchTasks\" />\r\n      <TaskList :tasks=\"tasks\" @task-completed=\"updateTask\" @task-deleted=\"deleteTask\" />\r\n      <CombinedView :tasks=\"tasks\" @task-added=\"fetchTasks\" />\r\n    </section>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport axios from 'axios'; // Asegúrate de que Axios esté instalado\r\nimport AddTask from './components/AddTask.vue';\r\nimport TaskList from './components/TaskList.vue';\r\nimport CombinedView from './components/CombinedView.vue';\r\n\r\n\r\nexport default {\r\n  components: {\r\n    AddTask,\r\n    TaskList,\r\n    CombinedView,\r\n  },\r\n  data() {\r\n    return {\r\n      tasks: [],\r\n    };\r\n  },\r\n  methods: {\r\n    async fetchTasks() {\r\n      try {\r\n        const response = await axios.get('https://dummyjson.com/todos'); // API de ejemplo\r\n        this.tasks = response.data.todos;\r\n      } catch (error) {\r\n        console.error(\"Error al obtener tareas:\", error);\r\n      }\r\n    },\r\n    async updateTask(taskId) {\r\n      const task = this.tasks.find(t => t.id === taskId);\r\n      if (task) {\r\n        task.completed = !task.completed; // Cambia el estado de completado\r\n        try {\r\n          await axios.put(`https://dummyjson.com/todos/${taskId}`, task); // Actualiza en la API\r\n        } catch (error) {\r\n          console.error(\"Error al actualizar tarea:\", error);\r\n        }\r\n      }\r\n    },\r\n    async deleteTask(taskId) {\r\n      this.tasks = this.tasks.filter(t => t.id !== taskId);\r\n      try {\r\n        await axios.delete(`https://dummyjson.com/todos/${taskId}`); // Elimina en la API\r\n      } catch (error) {\r\n        console.error(\"Error al eliminar tarea:\", error);\r\n      }\r\n    },\r\n  },\r\n  mounted() {\r\n    this.fetchTasks(); // Obtiene las tareas al cargar la aplicación\r\n  },\r\n};\r\n</script>\r\n\r\n<style>\r\n#app {\r\n  text-align: center;\r\n  margin: 20px;\r\n}\r\nheader {\r\n  margin-bottom: 20px;\r\n}\r\n</style>\r\n"],"mappings":"AAgBA,OAAAA,KAAA;AACA,OAAAC,OAAA;AACA,OAAAC,QAAA;AACA,OAAAC,YAAA;AAGA;EACAC,UAAA;IACAH,OAAA;IACAC,QAAA;IACAC;EACA;EACAE,KAAA;IACA;MACAC,KAAA;IACA;EACA;EACAC,OAAA;IACA,MAAAC,WAAA;MACA;QACA,MAAAC,QAAA,SAAAT,KAAA,CAAAU,GAAA;QACA,KAAAJ,KAAA,GAAAG,QAAA,CAAAJ,IAAA,CAAAM,KAAA;MACA,SAAAC,KAAA;QACAC,OAAA,CAAAD,KAAA,6BAAAA,KAAA;MACA;IACA;IACA,MAAAE,WAAAC,MAAA;MACA,MAAAC,IAAA,QAAAV,KAAA,CAAAW,IAAA,CAAAC,CAAA,IAAAA,CAAA,CAAAC,EAAA,KAAAJ,MAAA;MACA,IAAAC,IAAA;QACAA,IAAA,CAAAI,SAAA,IAAAJ,IAAA,CAAAI,SAAA;QACA;UACA,MAAApB,KAAA,CAAAqB,GAAA,gCAAAN,MAAA,IAAAC,IAAA;QACA,SAAAJ,KAAA;UACAC,OAAA,CAAAD,KAAA,+BAAAA,KAAA;QACA;MACA;IACA;IACA,MAAAU,WAAAP,MAAA;MACA,KAAAT,KAAA,QAAAA,KAAA,CAAAiB,MAAA,CAAAL,CAAA,IAAAA,CAAA,CAAAC,EAAA,KAAAJ,MAAA;MACA;QACA,MAAAf,KAAA,CAAAwB,MAAA,gCAAAT,MAAA;MACA,SAAAH,KAAA;QACAC,OAAA,CAAAD,KAAA,6BAAAA,KAAA;MACA;IACA;EACA;EACAa,QAAA;IACA,KAAAjB,UAAA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}